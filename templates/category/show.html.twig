{% extends 'base.html.twig' %}
{% block title %}Catégorie #{{ category.id }}{% endblock %}

{% block body %}

<h1 class="mt-0">{{ category.name }}</h1>
<h2>3 dernières séries associées :</h2>
{% for program in programs %}
        <div> 
            <a href="{{ path("program_show", { id: program.id }) }}"><h2>{{ loop.index }} / {{ program.title }} - ID : {{ program.id }}</h2></a>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

<a href="{{ path('category_index') }}">
    Retour à la liste des categories
</a>

{% endblock %}